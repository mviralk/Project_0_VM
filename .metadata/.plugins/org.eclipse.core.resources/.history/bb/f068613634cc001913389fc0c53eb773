					log.info("1] Savings");
					log.info("2] Checking");
					log.info("3] Back");
					int register = 0;
					do {

						try {

							register = Integer.parseInt(scanner.next());
							switch (register) {
							case 1:
								log.info("Under Construction");
								register = 3;
								break;
							case 2:
								log.info("Under Construction");
